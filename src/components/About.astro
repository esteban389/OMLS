---
import { _, type TranslationLanguage } from "../translations/translation";

interface Props {
    language: TranslationLanguage;
}

const { language } = Astro.props;
---

<section id="about">
    <div class="gradient-bg"></div>
    <div class="container">
        <div class="philosophy-tag">{_(language, "about.philosophy_tag")}</div>
        <div class="grid-wrapper">
            <div>
                <h2 class="main-heading">
                    {_(language, "about.title.line1")}
                    <span class="gradient-text"
                        >{_(language, "about.title.line2")}</span
                    >
                </h2>
                <p class="intro-paragraph">
                    {_(language, "about.intro.paragraph1")}
                </p>
                <p class="intro-paragraph">
                    {_(language, "about.intro.paragraph2")}
                </p>
                <div class="features-grid"></div>
            </div>
            <div class="right-feature-container">
                <div class="highlight-overlay"></div>
                <h3>{_(language, "about.differences.title")}</h3>
                <ul>
                    <li>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon"
                        >
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <path d="m9 11 3 3L22 4"></path>
                        </svg><span class="feature-subtitle"
                            >{
                                _(
                                    language,
                                    "about.differences.points.dedication",
                                )
                            }</span>
                    </li>
                    <li>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon"
                        >
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <path d="m9 11 3 3L22 4"></path>
                        </svg>
                        <span class="feature-subtitle"
                            >{
                                _(language, "about.differences.points.pricing")
                            }</span
                        >
                    </li>
                    <li>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon"
                        >
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <path d="m9 11 3 3L22 4"></path>
                        </svg>
                        <span class="feature-subtitle"
                            >{
                                _(
                                    language,
                                    "about.differences.points.responsiveness",
                                )
                            }</span
                        >
                    </li>
                    <li>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon"
                        >
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <path d="m9 11 3 3L22 4"></path>
                        </svg>
                        <span class="feature-subtitle"
                            >{
                                _(language, "about.differences.points.support")
                            }</span
                        >
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<style>
    #about {
        padding-top: 8rem;
        padding-bottom: 8rem;
        position: relative;

        .gradient-bg {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background: linear-gradient(
                to bottom right,
                rgba(255, 255, 255, 0.5),
                rgba(239, 246, 255, 0.5)
            );
        }

        [data-theme="dark"] & .gradient-bg {
            background: linear-gradient(
                to bottom right,
                var(--color-overlay-light),
                var(--color-overlay-medium)
            );
        }

        .container {
            position: relative;
            max-width: 80rem;
            margin-left: auto;
            margin-right: auto;
            padding-left: 1.5rem;
            padding-right: 1.5rem;
        }

        .grid-wrapper {
            display: grid;
            grid-template-columns: repeat(1, 1fr);
            gap: 4rem;
            align-items: center;

            @media (min-width: 1024px) {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .philosophy-tag {
            background-color: var(--color-background-secondary);
            backdrop-filter: blur(20px);
            color: var(--color-primary);
            padding: 1rem 2rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
            margin-bottom: 1rem;
            box-shadow: 0 25px 50px -12px var(--color-shadow-medium);
            border: 1px solid var(--color-border-primary);
            cursor: pointer;
            transition: all 0.3s ease;
            width: fit-content;

            &:hover {
                transform: scale(1.1);
            }
        }

        .main-heading {
            font-size: 3rem;
            font-weight: bold;
            color: var(--color-text-primary);
            margin-block: 2rem;
            line-height: 1.2;
            cursor: default;
            transition: all 0.3s ease;

            @media (min-width: 768px) {
                font-size: 3.75rem;
            }

            &:hover {
                transform: scale(1.05);
            }
        }

        .gradient-text {
            background: var(--color-gradient-secondary);
            -webkit-background-clip: text;
            color: transparent;
        }

        .intro-paragraph {
            font-size: 1.125rem;
            color: var(--color-text-secondary);
            margin-bottom: 2rem;
            line-height: 1.75;
            transition: all 0.3s ease;
        }

        .right-feature-container {
            background: linear-gradient(
                to bottom right,
                var(--color-overlay-light),
                var(--color-overlay-medium)
            );
            backdrop-filter: blur(20px);
            border-radius: 1.5rem;
            padding: 2.5rem;
            color: var(--color-text-primary);
            position: relative;
            overflow: hidden;
            border: 1px solid var(--color-border-primary);
            box-shadow: 0 25px 50px -12px var(--color-shadow-medium);
            transition: all 0.3s ease;

            &:hover {
                transform: scale(1.05);
            }

            .highlight-overlay {
                position: absolute;
                inset: 0;
                background: linear-gradient(
                    to bottom right,
                    var(--color-overlay-light),
                    var(--color-overlay-medium)
                );
                opacity: 0;
                transition: opacity 0.5s ease;

                .right-feature-container:hover & {
                    opacity: 1;
                }
            }

            h3 {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 2rem;
                color: var(--color-text-primary);
                transition: color 0.3s ease;

                &:hover {
                    color: var(--color-primary);
                }
            }

            ul {
                list-style: none;
                padding: 0;
                margin: 0;

                li {
                    display: flex;
                    align-items: start;
                    gap: 1rem;
                    margin-bottom: 1.5rem;
                    transition: transform 0.3s ease;

                    &:hover {
                        transform: translateX(0.5rem);
                    }

                    svg {
                        flex-shrink: 0;
                        color: var(--color-primary);
                        transition: transform 0.3s ease;

                        li:hover & {
                            transform: scale(1.25);
                        }
                    }

                    span {
                        line-height: 1.75;
                        color: var(--color-text-secondary);
                        transition: color 0.3s ease;

                        li:hover & {
                            color: var(--color-primary);
                        }
                    }
                }
            }
        }
    }

    @keyframes bounce {
        0%,
        100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-1rem);
        }
    }

    @keyframes pulse {
        0%,
        100% {
            opacity: 0.4;
        }

        50% {
            opacity: 1;
        }
    }
</style>
