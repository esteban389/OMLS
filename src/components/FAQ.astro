<script>
    const faqGrid = document.querySelector(".faq-grid");
    if (faqGrid) {
        faqGrid.addEventListener("click", (e) => {
            const target = e.target;
            if (target instanceof HTMLElement) {
                const faqItem = target.closest(".faq-item");
                if (faqItem) {
                    faqItem.classList.toggle("active");
                }
            }
        });
    }
</script>

<style>
    /* FAQ Section */
    .section-faq {
        padding-top: 8rem;
        padding-bottom: 8rem;
        position: relative;
        background: linear-gradient(
            to bottom right,
            rgba(255, 255, 255, 0.5),
            rgba(239, 246, 255, 0.5)
        );

        [data-theme="dark"] & {
            background: linear-gradient(
                to bottom right,
                var(--color-overlay-light),
                var(--color-overlay-medium)
            );
        }

        .container {
            position: relative;
            max-width: 80rem;
            margin-left: auto;
            margin-right: auto;
            padding-left: 1.5rem;
            padding-right: 1.5rem;

            @media (min-width: 1024px) {
                padding-left: 2rem;
                padding-right: 2rem;
            }

            > .container {
                position: relative;
                max-width: 80rem;
                margin-left: auto;
                margin-right: auto;
                padding-left: 1.5rem;
                padding-right: 1.5rem;

                @media (min-width: 1024px) {
                    padding-left: 2rem;
                    padding-right: 2rem;
                }
            }

            .header {
                text-align: center;
                margin-bottom: 4rem;

                .badge {
                    background: var(--color-gradient-gold);
                    color: var(--color-text-primary);
                    padding: 0.75rem 1.5rem;
                    border-radius: 9999px;
                    font-size: 0.875rem;
                    font-weight: 600;
                    margin-bottom: 1rem;
                    display: inline-block;
                    box-shadow: 0 10px 25px var(--color-shadow-light);
                    border: 1px solid var(--color-border-primary);
                    transition: all 0.3s ease;
                    cursor: pointer;

                    &:hover {
                        transform: scale(1.05);
                        box-shadow: 0 15px 35px var(--color-shadow-medium);
                    }
                }

                .title {
                    font-size: 3rem;
                    font-weight: bold;
                    color: var(--color-text-primary);
                    margin-block: 2rem;
                    cursor: default;

                    @media (min-width: 768px) {
                        font-size: 3.75rem;
                    }
                }

                .subtitle {
                    font-size: 1.25rem;
                    color: var(--color-text-secondary);
                    max-width: 64rem;
                    margin: 0 auto;
                    line-height: 1.75;
                }
            }

            .faq-grid {
                display: grid;
                gap: 1.5rem;
                max-width: 64rem;
                margin: 0 auto;

                .faq-item {
                    background: var(--color-background-secondary);
                    backdrop-filter: blur(16px);
                    border-radius: 1rem;
                    border: 1px solid var(--color-border-primary);
                    box-shadow: 0 10px 30px var(--color-shadow-light);
                    overflow: hidden;
                    transition: all 0.3s ease;

                    &:hover,
                    &:focus {
                        transform: translateY(-0.25rem);
                        box-shadow: 0 20px 40px var(--color-shadow-medium);
                    }

                    .faq-question {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        padding: 1.5rem;
                        cursor: pointer;
                        transition: all 0.3s ease;
                        width: 100%;
                        text-align: left;

                        &:hover,
                        &:focus {
                            background: var(--color-overlay-light);

                            h3 {
                                color: var(--color-primary);
                            }

                            .faq-icon {
                                transform: rotate(180deg);
                            }
                        }

                        h3 {
                            font-size: 1.125rem;
                            font-weight: 600;
                            color: var(--color-text-primary);
                            margin: 0;
                            transition: color 0.3s ease;
                        }

                        .faq-icon {
                            width: 1.5rem;
                            height: 1.5rem;
                            color: var(--color-primary);
                            transition: transform 0.3s ease;
                            flex-shrink: 0;

                            .faq-item.active & {
                                transform: rotate(180deg);
                            }
                        }
                    }

                    .faq-answer {
                        padding: 0 1.5rem;
                        border-top: 1px solid var(--color-border-tertiary);
                        max-height: 0;
                        overflow: hidden;
                        transition:
                            all 0.2s ease,
                            filter 0.2s ease-in-out,
                            opacity 0.2s ease;
                        filter: blur(4px);
                        opacity: 0;
                        margin: 0;

                        .faq-item.active & {
                            max-height: 200px;
                            padding: 1.5rem;
                            opacity: 1;
                            margin-bottom: 0;
                            filter: blur(0);
                        }

                        p {
                            color: var(--color-text-secondary);
                            line-height: 1.75;
                            margin: 0;
                        }
                    }
                }
            }
        }
    }
</style>
