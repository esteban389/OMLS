---
import { _, type TranslationLanguage } from '../translations/translation';

interface Props {
    language: TranslationLanguage;
}

const { language } = Astro.props;
---

<section id="faq" class="section-faq">
    <div class="container">
        <div class="header">
            <div class="badge">{_(language, 'faq.header.badge')}</div>
