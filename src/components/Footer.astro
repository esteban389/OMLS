---
import { _, type TranslationLanguage } from "../translations/translation";

interface Props {
    language: TranslationLanguage;
}

const { language } = Astro.props;
---

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-section">
                <div class="footer-logo">
                    <img src="/images/logo.webp" alt="Logo" />
                </div>
                <p>{_(language, "footer.description")}</p>
                <div class="social-links">
                    <a href="#" class="social-link">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path
                                d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                            ></path>
                        </svg>
                    </a>
                    <a href="#" class="social-link">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <rect
                                width="20"
                                height="20"
                                x="2"
                                y="2"
                                rx="5"
                                ry="5"></rect>
                            <path
                                d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                            ></path>
                            <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
                        </svg>
                    </a>
                    <a href="#" class="social-link">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path
                                d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>
            <div class="footer-section">
                <h4>{_(language, "footer.sections.services.title")}</h4>
                <ul>
                    <li>
                        <a href="#services"
                            >{
                                _(
                                    language,
                                    "footer.sections.services.links.tax",
                                )
                            }</a>
                    </li>
                    <li>
                        <a href="#services"
                            >{
                                _(
                                    language,
                                    "footer.sections.services.links.notary",
                                )
                            }</a>
                    </li>
                    <li>
                        <a href="#services"
                            >{
                                _(
                                    language,
                                    "footer.sections.services.links.accounting",
                                )
                            }</a>
                    </li>
                    <li>
                        <a href="#services"
                            >{
                                _(
                                    language,
                                    "footer.sections.services.links.itin",
                                )
                            }</a>
                    </li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>{_(language, "footer.sections.company.title")}</h4>
                <ul>
                    <li>
                        <a href="#about"
                            >{
                                _(
                                    language,
                                    "footer.sections.company.links.about",
                                )
                            }</a>
                    </li>
                    <li>
                        <a href="#contact"
                            >{
                                _(
                                    language,
                                    "footer.sections.company.links.contact",
                                )
                            }</a>
                    </li>
                    <li>
                        <a href="#faq"
                            >{
                                _(language, "footer.sections.company.links.faq")
                            }</a>
                    </li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>{_(language, "footer.sections.contact_info.title")}</h4>
                <ul>
                    <li id="footer-email">hello@olympicmoris.com</li>
                    <li id="footer-phone-number">+1 (702) 555-0123</li>
                    <li>
                        {_(language, "contact.hours.weekdays")}: {
                            _(language, "contact.hours.weekdays_time")
                        }
                    </li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>{_(language, "footer.copyright")}</p>
        </div>
    </div>
</footer>

<style>
    /* Footer */
    .footer {
        background: linear-gradient(to bottom right, #264653, #1f2937, #111827);
        color: #fff;
        padding: 5rem 0;
        position: relative;
        overflow: hidden;

        [data-theme="dark"] & {
            background: linear-gradient(
                to bottom right,
                #0f172a,
                #1e293b,
                #334155
            );
        }

        &::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(
                circle at 10% -10%,
                rgba(186, 147, 80, 0.3),
                transparent 80%
            );
            z-index: 0;

            [data-theme="dark"] & {
                background: radial-gradient(
                    circle at 10% -10%,
                    rgba(186, 147, 80, 0.2),
                    transparent 80%
                );
            }
        }

        .container {
            padding: 0 1.5rem;
            position: relative;
            z-index: 1;
            max-width: 80rem;
            margin-inline: auto;
            padding-inline: 1.5rem;

            @media (min-width: 1024px) {
                padding-inline: 2rem;
            }

            @media (min-width: 1024px) {
                padding: 0 2rem;
            }

            .footer-content {
                display: grid;
                gap: 3rem;
                margin-bottom: 3rem;

                @media (min-width: 768px) {
                    grid-template-columns: repeat(2, 1fr);
                }

                @media (min-width: 1024px) {
                    grid-template-columns: repeat(4, 1fr);
                }

                .footer-section {
                    h4 {
                        font-size: 1.25rem;
                        font-weight: 600;
                        color: #ba934f;
                        margin-bottom: 1.5rem;
                        transition: color 0.3s ease;

                        &:hover {
                            color: #ffd700;
                        }
                    }

                    p {
                        color: #9ca3af;
                        line-height: 1.6;
                        margin-bottom: 1.5rem;
                    }

                    ul {
                        list-style: none;
                        padding: 0;
                        margin: 0;

                        li {
                            margin-bottom: 0.75rem;
                            transition: transform 0.3s ease;

                            &:hover {
                                transform: translateX(0.25rem);
                            }

                            a {
                                color: #9ca3af;
                                text-decoration: none;
                                transition: color 0.3s ease;

                                &:hover {
                                    color: #ffd700;
                                }
                            }
                        }
                    }

                    .footer-logo {
                        width: 4rem;
                        height: 4rem;
                        border-radius: 1rem;
                        overflow: hidden;
                        border: 1px solid rgba(218, 165, 32, 0.3);
                        padding: 0.25rem;
                        margin-bottom: 1rem;
                        transition: all 0.3s ease;
                        background-color: #fff;

                        &:hover {
                            transform: scale(1.1);
                            border-color: gold;
                        }

                        img {
                            width: 100%;
                            height: 100%;
                            object-fit: contain;
                            object-position: center;
                        }
                    }

                    .social-links {
                        display: flex;
                        gap: 1rem;

                        .social-link {
                            width: 2.5rem;
                            height: 2.5rem;
                            border-radius: 0.75rem;
                            background: linear-gradient(
                                to bottom right,
                                gold,
                                #f59e0b
                            );
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            color: white;
                            text-decoration: none;
                            transition: all 0.3s ease;
                            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);

                            &:hover {
                                transform: translateY(-0.25rem) scale(1.1);
                                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
                            }

                            svg {
                                width: 1.25rem;
                                height: 1.25rem;
                            }
                        }
                    }
                }
            }

            .footer-bottom {
                text-align: center;
                padding-top: 2rem;
                border-top: 1px solid rgba(218, 165, 32, 0.2);

                p {
                    color: #9ca3af;
                    font-size: 0.875rem;
                    margin: 0;

                    span {
                        color: #ba934f;
                        margin-left: 0.5rem;
                        cursor: pointer;
                        transition: color 0.3s ease;

                        &:hover {
                            color: #ffd700;
                        }
                    }
                }
            }
        }
    }
</style>

<script>
    const footerEmail = document.getElementById("footer-email");
    const footerPhoneNumber = document.getElementById("footer-phone-number");

    if (footerEmail) {
        const address = "legalservice";
        const domain = "olympicmortis.net";
        footerEmail.textContent = `${address}@${domain}`;
    }

    if (footerPhoneNumber) {
        const extension = "+1";
        const phoneNumber = "(786) 273-2135";
        footerPhoneNumber.textContent = `${extension} ${phoneNumber}`;
    }
</script>