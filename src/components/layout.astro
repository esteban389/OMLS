---
import type { TranslationLanguage } from "../translations/translation";
import ScrollTopButton from "./ScrollTopButton.astro";

const language: TranslationLanguage = Astro.props.language ?? "en";
---

<html lang={language}>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Olympic Moris Legal Services</title>
        <meta
            name="description"
            content="Olympic Moris Legal Services is a law firm that provides legal services to the community of Las Vegas, Nevada. We are a team of experienced lawyers who are dedicated to providing the best possible service to our clients."
        />
        <link rel="icon" href="/images/logo.webp" type="image/webp" />
    </head>
    <body>
        <slot />
        <ScrollTopButton />
    </body>
</html>

<style is:global>
    :root {
        font-family: ui-sans-serif, system-ui, sans-serif, "Apple Color Emoji",
            "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
        font-feature-settings: "normal";
        font-variation-settings: "normal";
        --blur: 12px;

        /* Light Theme Colors (default) */
        --color-primary: #ffd700;
        --color-primary-light: #f59e0b;
        --color-primary-dark: #f97316;
        --color-primary-accent: #fb923c;

        --color-background: #ffffff;
        --color-background-secondary: rgba(255, 255, 255, 0.8);
        --color-background-tertiary: rgba(255, 255, 255, 0.9);
        --color-background-glass: rgba(255, 255, 255, 0.95);

        --color-text-primary: #333333;
        --color-text-secondary: #4b5563;
        --color-text-tertiary: #6b7280;
        --color-text-muted: #9ca3af;

        --color-border-primary: rgba(218, 165, 32, 0.3);
        --color-border-secondary: rgba(218, 165, 32, 0.2);
        --color-border-tertiary: rgba(218, 165, 32, 0.1);
        --color-border-light: rgb(209, 213, 219);

        --color-shadow-light: rgba(0, 0, 0, 0.1);
        --color-shadow-medium: rgba(0, 0, 0, 0.15);
        --color-shadow-heavy: rgba(0, 0, 0, 0.25);

        --color-overlay-light: rgba(255, 215, 0, 0.1);
        --color-overlay-medium: rgba(255, 215, 0, 0.15);
        --color-overlay-heavy: rgba(255, 215, 0, 0.2);

        --color-gradient-primary: linear-gradient(
            to right,
            var(--color-primary),
            var(--color-primary-light)
        );
        --color-gradient-secondary: linear-gradient(
            to right,
            var(--color-primary),
            var(--color-primary-light),
            var(--color-primary-dark)
        );
        --color-gradient-gold: linear-gradient(
            to bottom right,
            var(--color-primary),
            var(--color-primary-light)
        );

        --color-success: #10b981;
        --color-warning: #f59e0b;
        --color-error: #ef4444;
        --color-info: #3b82f6;
    }

    /* Dark Theme Colors */
    [data-theme="dark"] {
        --color-primary: #fbbf24;
        --color-primary-light: #f59e0b;
        --color-primary-dark: #ea580c;
        --color-primary-accent: #fb923c;

        --color-background: #0f172a;
        --color-background-secondary: rgba(30, 41, 59, 0.8);
        --color-background-tertiary: rgba(30, 41, 59, 0.9);
        --color-background-glass: rgba(30, 41, 59, 0.95);

        --color-text-primary: #f8fafc;
        --color-text-secondary: #cbd5e1;
        --color-text-tertiary: #94a3b8;
        --color-text-muted: #64748b;

        --color-border-primary: rgba(251, 191, 36, 0.3);
        --color-border-secondary: rgba(251, 191, 36, 0.2);
        --color-border-tertiary: rgba(251, 191, 36, 0.1);
        --color-border-light: rgb(51, 65, 85);

        --color-shadow-light: rgba(0, 0, 0, 0.3);
        --color-shadow-medium: rgba(0, 0, 0, 0.4);
        --color-shadow-heavy: rgba(0, 0, 0, 0.6);

        --color-overlay-light: rgba(251, 191, 36, 0.1);
        --color-overlay-medium: rgba(251, 191, 36, 0.15);
        --color-overlay-heavy: rgba(251, 191, 36, 0.2);

        --color-gradient-primary: linear-gradient(
            to right,
            var(--color-primary),
            var(--color-primary-light)
        );
        --color-gradient-secondary: linear-gradient(
            to right,
            var(--color-primary),
            var(--color-primary-light),
            var(--color-primary-dark)
        );
        --color-gradient-gold: linear-gradient(
            to bottom right,
            var(--color-primary),
            var(--color-primary-light)
        );

        --color-success: #22c55e;
        --color-warning: #f59e0b;
        --color-error: #ef4444;
        --color-info: #3b82f6;
    }

    html,
    body {
        padding: 0;
        margin: 0;
        background-color: var(--color-background);
        color: var(--color-text-primary);
        font-family:
            "Inter",
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            sans-serif;
        line-height: 1.6;
        transition:
            background-color 0.3s ease,
            color 0.3s ease;
        overscroll-behavior: none;
    }

    button {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        margin: 0;
        font-size: inherit;
        font-family: inherit;
        color: inherit;
        text-align: left;
    }

    a {
        color: inherit;
        text-decoration: none;
        cursor: pointer;
    }
</style>
