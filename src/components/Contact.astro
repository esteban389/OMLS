---
import { _, type TranslationLanguage } from '../translations/translation';

interface Props {
    language: TranslationLanguage;
}

const { language } = Astro.props;
---

<section id="contact" class="section-contact">
    <div class="container">
        <div class="header">
            <div class="badge">{_(language, 'contact.header.badge')}</div>
            <h2 class="title">{_(language, 'contact.header.title')}</h2>
            <p class="subtitle">{_(language, 'contact.header.subtitle')}</p>
        </div>
        <div class="contact-grid">
            <div class="contact-info">
                <h3>{_(language, 'contact.info.title')}</h3>
                <div class="info-items">
                    <div class="info-item">
                        <div class="icon-box">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round">
                                <path
                                    d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z">
                                </path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                        </div>
                        <div class="info-content">
                            <h4>{_(language, 'contact.info.email.label')}</h4>
                            <p id="email"></p>
                            <script>
                                const u = "hello";
                                const d = "olympicmoris.com";
                                const emailElement = document.getElementById('email');
                                if (emailElement) {
                                    emailElement.innerHTML = `<a href="mailto:${u}@${d}">${u}@${d}</a>`;
                                }
                            </script>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="icon-box">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round">
                                <path
                                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z">
                                </path>
                            </svg>
                        </div>
                        <div class="info-content">
                            <h4>{_(language, 'contact.info.phone.label')}</h4>
                            <p>+1 (702) 555-0123</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="icon-box">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                        </div>
                        <div class="info-content">
                            <h4>{_(language, 'contact.info.location.label')}</h4>
                            <p>{_(language, 'contact.info.location.value')}</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-content business-hours-info">
                            <h4>{_(language, 'contact.info.hours.label')}</h4>
                            <div class="business-hours-container">
                                <div class="hours-item">
                                    <span class="day">{_(language, 'contact.hours.weekdays')}</span>
                                    <span class="time">{_(language, 'contact.hours.weekdays_time')}</span>
                                </div>
                                <div class="hours-item closed">
                                    <span class="day">{_(language, 'contact.hours.sunday')}</span>
                                    <span class="time">{_(language, 'contact.hours.closed')}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="contact-form">
                <h3>{_(language, 'contact.form.title')}</h3>
                <form>
                    <div class="form-group">
                        <label for="fullname">{_(language, 'contact.form.fields.fullname.label')}</label>
                        <input type="text" id="fullname" name="fullname" required>
                    </div>
                    <div class="form-group">
                        <label for="email">{_(language, 'contact.form.fields.email.label')}</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">{_(language, 'contact.form.fields.phone.label')}</label>
                        <input type="tel" id="phone" name="phone">
                    </div>
                    <div class="form-group">
                        <label for="service">{_(language, 'contact.form.fields.service.label')}</label>
                        <select id="service" name="service">
                            <option value="">{_(language, 'contact.form.fields.service.options.default')}</option>
                            <option value="tax">{_(language, 'contact.form.fields.service.options.tax')}</option>
                            <option value="notary">{_(language, 'contact.form.fields.service.options.notary')}</option>
                            <option value="accounting">{_(language, 'contact.form.fields.service.options.accounting')}</option>
                            <option value="other">{_(language, 'contact.form.fields.service.options.other')}</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message">{_(language, 'contact.form.fields.message.label')}</label>
                        <textarea id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn-primary">
                        {_(language, 'contact.form.submit')}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path d="M5 12h14" />
                            <path d="m12 5 7 7-7 7" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section> 